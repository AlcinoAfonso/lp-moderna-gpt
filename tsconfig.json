{
  "compilerOptions": {
    /* Básico */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,

    /* Qualidade e consistência */
    "skipLibCheck": true,
    "strict": false,                // Next.js desativa strict por padrão
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,

    /* Integração Next.js */
    "plugins": [{ "name": "next" }],

    /* Alias que resolve o erro */
    "baseUrl": ".",                 // permite paths relativos ao projeto
    "paths": {
      "@/*": ["src/*"]              // usar "@/algum/arquivo" resolve para "src/algum/arquivo"
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
